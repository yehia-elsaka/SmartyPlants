<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

   
    <FrameLayout
        android:id="@+id/action_bar_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" >
        
        <RelativeLayout
            android:id="@+id/action_bar"
            android:layout_width="fill_parent"
            android:layout_height="41dp"
            android:background="@drawable/actionbar" >

            <Button
                android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_action_info" 
                />

        </RelativeLayout>

        <ImageView
            android:layout_width="115dp"
            android:layout_height="56dp"
            android:gravity="start"
            android:src="@drawable/logo" 
            android:layout_marginLeft="10dp"/>

    </FrameLayout>
    

    <LinearLayout
        android:id="@+id/form"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/form1"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:background="@drawable/form1"
            android:gravity="center"
            android:text="ACCOUNT INFORMATION"
            android:textColor="@android:color/black"
            android:textSize="20dp" >
        </TextView>

        <RelativeLayout
            android:id="@+id/form2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_cell"
            android:visibility="gone" >
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/form3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_cell"
            android:orientation="vertical"
            android:padding="20dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="48dp"
                    android:text="Username :"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/textView1"
                    android:background="@drawable/socialbasic"
                    android:ems="10"
                    android:textSize="12sp" >

                </EditText>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="76dp"
                    android:text="Email :"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/textView2"
                    android:background="@drawable/socialbasic"
                    android:ems="10"
                    android:textSize="12sp" >

                </EditText>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/editText1"
                    android:layout_alignBottom="@+id/editText1"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50dp"
                    android:text="Password :"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/textView3"
                    android:background="@drawable/socialbasic"
                    android:ems="10"
                    android:textSize="12sp"
                    android:password="true" >

                </EditText>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm password :"
                    android:textColor="@android:color/black" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="14dp"
                    android:layout_toRightOf="@+id/textView4"
                    android:background="@drawable/socialbasic"
                    android:ems="10"
                    android:textSize="12sp" 
                    android:password="true">

                </EditText>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/form4"
            android:layout_width="fill_parent"
            android:layout_height="72dp"
            android:background="@drawable/form_end" >

            <ImageView
                android:id="@drawable/create"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_margin="20dp"
                android:src="@drawable/create" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>